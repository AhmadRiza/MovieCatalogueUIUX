<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.riza.moviecatalogueuiux">
    <uses-permission android:name="android.permission.INTERNET"/>
    <permission android:name="com.example.riza.moviecatalogueuiux.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.example.riza.moviecatalogueuiux.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.details.DetailsActivity"
            android:theme="@style/MyMaterialTheme.TransparentStatusBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />
        </activity>
        <activity android:name=".ui.search.SearchActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />
        </activity>
        <provider
            android:authorities="com.example.riza.moviecatalogueuiux"
            android:name=".data.provider.MovieProvider"
            android:exported="true"
            android:readPermission="com.example.riza.moviecatalogueuiux.READ_DATABASE"
            android:writePermission="com.example.riza.moviecatalogueuiux.WRITE_DATABASE" />
    </application>

</manifest>